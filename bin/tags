#!/bin/bash -e

version=$GIT_CURRENT_TAG
update=""

if [[ $version =~ "rc" ]] ;then
  update=$version
else
  update="${version}-rc"
fi

current=${update#*"rc"}
value=0
if [[ $current > 0 ]] || [[ $current != '' ]] ;then
  value=$(($current+1))
else
  value=1
fi

name=${update%"-rc"*}
tag="${name}-rc${value}"
export GIT_BETA_TAG=$tag
envman add --key GIT_BETA_TAG --value $tag
